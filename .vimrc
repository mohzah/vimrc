syntax on
set autoindent

set smartindent

set tabstop=4        " tab width is 4 spaces
set shiftwidth=4     " indent also with 4 spaces
set expandtab        " expand tabs to spaces"

set textwidth=120

set t_Co=256

set number

set showmatch

set comments=sl:/*,mb:\ *,elx:\ */

set ignorecase
set hlsearch
set incsearch
set smartcase

